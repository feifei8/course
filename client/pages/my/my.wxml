<view class="index">
  <view class="index-hd">
    <image class="index-logo" src="{{userInfoAvatar}}"></image>
    <view class="index-desc">{{nickName}}</view>
  </view>
  <view class="index-bd">
    <view class="kind-list">
      <view class="kind-list-item" wx-if="{{mycourse}}">
        <view class="kind-list-item-hd kind-list-item-hd-show">
          <view class=" kind-list-text ">我的课表</view>
          <image class="kind-list-img " src="resources/kind/{{item.id}}.png "></image>
        </view>
        <view class="kind-list-item-bd kind-list-item-bd-show ">
          <view class="navigator-box navigator-box-show ">
            <block wx:for="{{mycourse}}" wx:key="{{item.pk}}">
              <navigator url="/pages/course/course" class="navigator " open-type="switchTab">
                <view class="navigator-text ">{{item.course_title}}</view>
                <view class="navigator-arrow "></view>
              </navigator>
            </block>
          </view>

        </view>
      </view>
      <view class="kind-list-item" wx-if="{{sharecourse}}">
        <view class="kind-list-item-hd kind-list-item-hd-show">
          <view class=" kind-list-text ">分享给我的课表</view>
          <image class="kind-list-img " src="resources/kind/{{item.id}}.png "></image>
        </view>
        <view class="kind-list-item-bd kind-list-item-bd-show ">
          <view class="navigator-box navigator-box-show ">
            <block wx:for="{{sharecourse}}" wx:key="{{item.pk}}">
              <navigator url="pages/course/course" class="navigator ">
                <view class="navigator-text ">{{item.course_title}}</view>
                <view class="navigator-arrow "></view>
              </navigator>
            </block>
            </view>
        </view>
      </view>

    </view>
  </view>
</view>